<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btndiv"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/questionpanel"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@id/answerpanel"
        android:gravity="end|bottom"
        android:textSize="45sp"
        android:padding="10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/answerpanel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@+id/lowerpanel"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="1dp"
        android:gravity="end|center_vertical"
        android:textSize="28sp"
        android:textColor="@color/lighterGrey"
        android:padding="10dp"
        />

    <LinearLayout
        android:id="@+id/lowerpanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnac"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="clear"/>

            <Button
                android:id="@+id/btnpercent"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:onClick="addTOSsymbol"/>

            <Button
                android:id="@+id/btnclear"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:text="⌫ "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:onClick="back"/>

            <Button
                android:id="@+id/btndivision"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:text="÷"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:onClick="addTOSsymbol"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnseven"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"
                />

            <Button
                android:id="@+id/btneight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnnine"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnmul"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:text="×"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:onClick="addTOSsymbol"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnfour"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnfive"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnsix"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnsub"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="addTOSminus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btntwo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnthree"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnplus"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/circular_button"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="addTOSsymbol"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btndzero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btnzero"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="addToS"/>

            <Button
                android:id="@+id/btndot"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/circular_lightgray"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30sp"
                android:onClick="decimal"/>

            <Button
                android:id="@+id/btnequals"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circular_orange"
                android:gravity="center"
                android:text="="
                android:textColor="@color/lightgrey"
                android:textSize="30sp"
                android:onClick="equals"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>